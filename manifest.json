{
  "manifest_version": 3,
  "name": "Focus Subdomain Guard",
  "version": "1.0.0",
  "description": "Block distracting subdomains with task-based access and precise overrides.",
  "action": {
    "default_title": "Focus Guard",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "background": {
    "service_worker": "background.js"
  }
}
